<h1>Books</h1>

<% @books.each do |book| %>
<table>

    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>

    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id) %></td>
    </tr>

</table>


<% end %>

<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>

<h4>title</h4>
<%= f.text_field :title %>

<h4>body</h4>
<%= f.text_area :body %>

<%= f.submit 'create Book'%>

<% end %>