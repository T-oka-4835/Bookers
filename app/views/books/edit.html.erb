<div class="edit">
 <h1><strong>Editing Book</strong></h1>
  <%= form_with model:@book, local: true do |f| %>
   <%= render 'layouts/error', model: f.object %>

<div class="edit-body">
<p>Title</p>
  <%= f.text_field :title %>

<p>Body</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book' %><br>

  <%= link_to "Show", book_path %>
  <%= link_to "Back", books_path %>
    </div>
  <% end %>
</div>
